{% extends 'blocks/page' %}

{% block content %}
	
	{% if errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors.all() %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

	<form method="POST" action="{{ route('login') }}">
		{{ csrf_field() }}

		<input name="password" type="password" />

		<input type="submit" value="send" />
	</form>

{% endblock %}